{
  "name": "boilerplate-react",
  "version": "0.1.0",
  "description": "Boilerplate frontend app with node, webpack, babel, react, jest and enzyme",
  "main": "index.js",
  "keywords": [
    "boilerplate",
    "node",
    "webpack",
    "babel",
    "react",
    "jest",
    "enzyme"
  ],
  "private": false,
  "dependencies": {
    "body-parser": "^1.18.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.8.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-transform-graphql": "^2.1.0",
    "jsdom": "^13.0.0",
    "lodash": "^4.17.11",
    "react-dev-utils": "^6.1.1",
    "react-test-renderer": "^16.6.1",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "scripts": {
    "build": "webpack --mode production",
    "client": "webpack-dev-server --mode development --hot --host 0.0.0.0 --disable-host-check --port 3000",
    "eslint-fix": "./node_modules/.bin/eslint --fix --ext .js,.jsx src",
    "start": "npm run client",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:verbose": "npm run test -- --verbose",
    "test:watch": "npm run test -- --watch",
    "test:watch:verbose": "npm run test -- --watch --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}",
      "!<rootDir>/src/index.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/build/**",
      "!**/coverage/**"
    ],
    "setupFiles": [
      "<rootDir>/config/setupJSDOM.js",
      "<rootDir>/config/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  }
}
